{
  "swagger": "2.0",
  "info": {
    "title": "Node.js 백엔드 개발 과제",
    "description": "회원가입, 로그인, 인증 테스트",
    "version": "1.0.0"
  },
  "host": "127.0.0.1:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/sign-up": {
      "post": {
        "description": "회원가입",
        "parameters": [
          {
            "name": "",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "JIN HO"
                },
                "password": {
                  "type": "string",
                  "example": "12341234"
                },
                "nickname": {
                  "type": "string",
                  "example": "Mentos"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "회원가입에 성공한 경우",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "JIN HO"
                },
                "nickname": {
                  "type": "string",
                  "example": "Mentos"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "회원가입에 실패한 경우",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": {
                    "code": "USER_ALREADY_EXISTS",
                    "message": "이미 가입된 사용자입니다."
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/sign-in": {
      "post": {
        "description": "로그인",
        "parameters": [
          {
            "name": "",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "JIN HO"
                },
                "password": {
                  "type": "string",
                  "example": "12341234"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "로그인에 성공한 경우",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "example": "eKDIkdfjoakIdkfjpekdkcjdkoIOdjOKJDFOlLDKFJKL"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "로그인에 실패한 경우",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": {
                    "code": "INVALID_CREDENTIALS",
                    "message": "아이디 또는 비밀번호가 올바르지 않습니다."
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/auth": {
      "get": {
        "description": "인증",
        "responses": {
          "200": {
            "description": "유효한 토큰인 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "정상적으로 인증되었습니다."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "토큰이 없는 경우",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": {
                    "code": "TOKEN_NOT_FOUND",
                    "message": "토큰이 없습니다."
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "유효하지 않은 토큰인 경우",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": {
                    "code": "INVALID_TOKEN",
                    "message": "토큰이 유효하지 않습니다."
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    }
  }
}
